<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        
        <record id="view_card_register_form" model="ir.ui.view">
            <field name="name">view.cardregister.wizard.form</field>
            <field name="model">card.register</field>
            <field name="arch" type="xml">       
                <form string="Card Registration" version="7.0">
                    <group>
                        <field name="card_number" required="1" style="width: 35%%"/>	
                    </group>
                    <footer>                        
                        <button name="action_register" string="Register" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>

