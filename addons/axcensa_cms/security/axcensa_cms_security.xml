<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <record model="ir.module.category" id="module_category_college">
                <field name="name">College Management</field>
                <field name="sequence">22</field>
        </record>
        <record id="group_college_administration" model="res.groups">
                <field name="name">College Administrator</field>
                <field name="category_id" ref="module_category_college"/>
        </record>

        <record id="group_college_teacher" model="res.groups">
                <field name="name">Teachers</field>
                <field name="category_id" ref="module_category_college"/>
        </record>

        <record id="group_college_student" model="res.groups">
                <field name="name">Students</field>
                <field name="category_id" ref="module_category_college"/>
        </record>

        <record id="group_college_parent" model="res.groups">
                <field name="name">Parents</field>
                <field name="category_id" ref="module_category_college"/>
        </record>

        <record id="college_rule_personal_college" model="ir.rule">
                <field name="name">My College</field>
                <field ref="model_college_college" name="model_id"/>
                <field name="domain_force">['|',('company_id','=',user.company_id.id),('company_id','=',False)]</field>
                <field name="groups" eval="[(4, ref('group_college_teacher')),(4, ref('group_college_student')),(4, ref('group_college_parent'))]"/> 
        </record>

    </data>
</openerp>
